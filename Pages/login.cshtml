@page
@model ShoesStore.Pages.LoginModel
@{
    Layout = "_Layout";
}

<div class="grid w-screen h-screen place-items-center">
    <form class="login flex flex-col ms-shadow p-6 w-md" method="post">
        @Html.AntiForgeryToken()
        <div class="input-container flex flex-col relative">
            <label for="username" class="mb-2">Username</label>
            <input class="p-2 border border-ms-muted mb-6" type="text" name="username" id="username"
                value="@(Model.ExceptionMessage != null ? Model.OldUsername : "")">
        </div>

        <div class="input-container flex flex-col relative">
            <label for="password" class="mb-2">Password</label>
            <input class="p-2 border border-ms-muted mb-6" type="text" name="password" id="password"
                value="@(Model.ExceptionMessage != null ? Model.OldPassword : "")">
            <img class="eye open  cursor-pointer absolute size-5 right-2 top-1/2 translate-y-[-25%]"
                src="images/admin-panel/eye-open.svg" alt="eye open">
            <img class="eye closed  cursor-pointer absolute size-5 right-2 top-1/2 translate-y-[-25%] hidden"
                src="images/admin-panel/eye-closed.svg" alt="eye open">

        </div>
        @if (Model.ExceptionMessage != null)
        {
            <div class="text-sm text-red-500 error-message mb-4">@Model.ExceptionMessage</div>

        }
        <button class="btn btn-primary cursor-pointer" type="submit">Login</button>
    </form>

</div>
